# omz
alias zshconfig='xdg-open $ZDOTDIR/.zshrc'
alias ohmyzsh='thunar $ZSH'

# Replace ls with exa
alias ls='exa --color=always --group-directories-first --icons' # preferred listing
alias la='exa -a --color=always --group-directories-first --icons'  # all files and dirs
alias ll='exa -la --color=always --group-directories-first --icons'  # long format
alias lt='exa -aT --color=always --group-directories-first --icons' # tree listing
alias l.='exa -ald --color=always --group-directories-first --icons .*' # show only dotfiles

# Personal
alias e='exit'
alias m='micro'
alias rm='trash'
alias instaloader='instaloader --login=__pole_399188__ --no-profile-pic --no-metadata-json --no-compress-json --no-captions --filename-pattern {filename} --highlights --no-video-thumbnails --sanitize-paths'
alias tlmgr='/usr/share/texmf-dist/scripts/texlive/tlmgr.pl --usermode'
alias interfaces='sudo nmcli d'
alias alias-finder="PS4='+%x:%I > ' zsh -i -x -c '' |& grep"
alias is_wayland_or_x11="loginctl show-session $(awk '/tty/ {print $1}' <(loginctl)) -p Type | awk -F= '{print $2}'"
alias battery_status='upower -i $(upower -e | grep 'BAT')'
alias xrdb='xrdb -load "$XDG_CONFIG_HOME/X11/xresources"'
alias neofetch_dragon='neofetch --ascii "$(fortune | cowsay -f dragon -W 30)" | lolcat'
alias wget='wget --hsts-file="$XDG_DATA_HOME/wget-hsts"'
alias whatismyip='curl --max-time 10 -w '\n' http://ident.me'

# Kitty pictures display
alias icat='kitty icat'

# Get fastest mirrors
alias mirror="sudo reflector -f 30 -l 30 --number 10 --verbose --save /etc/pacman.d/mirrorlist"
alias mirrord="sudo reflector --latest 50 --number 20 --sort delay --save /etc/pacman.d/mirrorlist"
alias mirrors="sudo reflector --latest 50 --number 20 --sort score --save /etc/pacman.d/mirrorlist"
alias mirrora="sudo reflector --latest 50 --number 20 --sort age --save /etc/pacman.d/mirrorlist"

# Help people new to Arch
alias apt='man pacman'
alias apt-get='man pacman'
alias please='sudo'
alias tb='nc termbin.com 9999'
